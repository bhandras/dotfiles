	name = Andras Banki-Horvath
	email = bhandras@gmail.com

[alias]
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
[diff]
  tool = meld
[difftool]
  prompt = false
[difftool "meld"]
  cmd = /usr/bin/meld "$LOCAL" "$REMOTE"
[merge]
  tool = meld
[mergetool]
  prompt = false
[mergetool "meld"]
  trustExitCode = true
  cmd = /usr/bin/meld "$LOCAL" "$BASE" "$REMOTE" --output "$MERGED"
[core]
	editor = /usr/bin/vim
